<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvTitle"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#fff"
        android:text="UPDATE APP"
        android:background="#3D7CDD"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize" />
    <TextView
        android:id="@+id/tvMessage"
        android:textColor="#2780E4"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="GPS Maps have new version. Please update for more useful features!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#C7C7C7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tvLater"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:textColor="#A39090"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Later"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:focusable="true" />
        <View
            android:id="@+id/viewLater"
            android:background="#C7C7C7"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/tvUpdate"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:textColor="#01C72F"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Update"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>